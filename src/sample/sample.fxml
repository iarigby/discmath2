<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<GridPane id="box"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">
    <VBox id="box">
        <VBox id="box">
            <HBox id="box">
                <Label id="topicselector" text="Select topic/subtopic"/>
                <!--<Button fx:id="refresh" id="on" text="Refresh"/>-->
            </HBox>
            <HBox fx:id = "topics" />
            <HBox fx:id = "subtopics" />
        </VBox>
        <Label fx:id = "question"/>
        <VBox fx:id="box" prefHeight="450" prefWidth="800" maxWidth="800" maxHeight="450" minHeight="450" minWidth="800">
            <ImageView fx:id="answer"/>
        </VBox>
        <HBox alignment="center">
            <Button text="Review Mode: " id = "off"/>
            <Button fx:id="review"/>
        </HBox>
    </VBox>

</GridPane>